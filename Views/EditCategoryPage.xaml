<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIBUDGET.EditCategoryPage"
             xmlns:controls="clr-namespace:MAUIBUDGET"
             xmlns:viewModels="clr-namespace:MAUIBUDGET.ViewModels"
             x:DataType="viewModels:AddCategoryPageViewModel"
             Title="Edit Category">
    <ScrollView>
        <VerticalStackLayout Padding="20,0,20,0" Spacing="20">
            <controls:CategoryEditorView 
                Category="{Binding CurrentCategory}" />

            <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                <Button Text="Delete Category"
                        Command="{Binding DeleteCategoryCommand}"
                        Background="{StaticResource Tertiary}"/>
                <Button Text="Confirm"
                        Command="{Binding ConfirmCategoryEditCommand}"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>